@section Scripts {
    <script>
       
        function validate() {
            debugger;
            var searchString = $("#SearchString").val();
            if (searchString.length == 0) {
                $("#quizDescription").addClass("red").text("Please enter employee Id.");
                return false;
            } else {
                $("#quizDescription").text("");
                return true;
            }
        }
    </script>
